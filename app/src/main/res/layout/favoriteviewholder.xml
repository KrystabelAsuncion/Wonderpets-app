<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="260dp">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemPic_f"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/whiskas_a" />

            <TextView
                android:id="@+id/itemName_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemPic_f"
                android:layout_marginStart="20dp"
                android:layout_marginTop="9dp"
                android:text="ProductName"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemShop_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemName_f"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Shop name" />

            <TextView
                android:id="@+id/itemPrice_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemPic_f"
                android:layout_marginStart="55dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/itemShop_f"
                android:text="â‚±0"
                android:textColor="@color/colorD"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>